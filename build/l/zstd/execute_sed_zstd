#!/bin/bash

execute_sed_zstd () {
#******************************************************************
# delete "zcat" patch line in SlackBuild
#******************************************************************
if [ ! -f zstd.SlackBuild.old ]; then
	cp -v zstd.SlackBuild zstd.SlackBuild.old
	(
		cd "$SLACKSRC"/l/zstd || exit 1
		sed -i -e "/zcat/d" zstd.SlackBuild
	)
fi
}
execute_sed_zstd
