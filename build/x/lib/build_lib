build_lib () {
#***********************
cd /source/x/x11 || exit 1

export UPGRADE_PACKAGES=always

for package in \
  xtrans \
  libX11 \
  libXext \
  libFS \
  libICE \
  libSM \
  libXScrnSaver \
  libXt \
  libXmu \
  libXpm \
  libXaw \
  libXfixes \
  libXcomposite \
  libXrender \
  libXcursor \
  libXdamage \
  libXft \
  libXi \
  libXinerama \
  libXrandr \
  libXres \
  libXtst \
  libXv \
  libXvMC \
  libXpresent \
  libXxf86dga \
  libXxf86vm \
  libdmx \
  libfontenc \
  libpciaccess \
  libxkbfile \
  libxshmfence \
  libXevie \
  libXxf86misc \
  libXp \
  libXfontcache \
  libXaw3d \
  pixman \
  libXfont2 \
  libxcvt \
  ; do
	if ! ./x11.SlackBuild lib $package; then
		exit 1
	fi
done

case $(uname -m) in
	x86_64 )
		if ! ( mv -v /tmp/x11-build/*.txz /slackware64/x ); then
			exit 1
		fi ;;
	* )
		if ! ( mv -v /tmp/x11-build/*.txz /slackware/x ); then
			exit 1
		fi ;;
esac

cd /scripts || exit 1
}

build_lib
