build_mesa () {
###################################################################
# set -xv
FLAG=${FLAG:-$(cat FLAG )}

if [[ "$FLAG" -eq 1 ]]; then
	COUNTER=1
elif [[ ! "$FLAG" -eq 1 ]]; then
	COUNTER=2
fi

case $COUNTER in
	1 )
		export BUILD_DEMOS=NO
		if ( ! build "$SRCDIR" "$PACKNAME" ); then
			exit 1
		fi
		echo 2 > /source/"$SRCDIR"/"$PACKNAME"/FLAG ;;
	* )
		export BUILD_DEMOS=YES
		if ( ! build "$SRCDIR" "$PACKNAME" ); then
			exit 1
		fi ;;
esac

cd /scripts || exit 1
}

build_mesa
