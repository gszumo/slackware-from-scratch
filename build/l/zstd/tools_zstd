tools_zstd () {
#*****************************
	export ZSTDVER=${VERSION:-$(echo zstd-*.tar.?z | cut -d - -f 2 | rev | cut -f 3- -d . | rev)}

    tar xvf zstd-"$ZSTDVER".tar.?z || exit 1
	cd zstd-"$ZSTDVER" || exit 1 

	make || exit 1

	make prefix=/tools install || exit 1
    cd ..
    rm -rf zstd-"$ZSTDVER"
    echo zstd-"$ZSTDVER" >> "$SFS"/tools/etc/tools_version
}

tools_zstd
