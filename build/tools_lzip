#!/bin/bash
#*****************************
tools_lzip () {
#*****************************
	export LZIPVER=${VERSION:-$(echo lzip-*.tar.?z | cut -d - -f 2 | rev | cut -f 3- -d . | rev)}

    tar xvf lzip-"$LZIPVER".tar.lz || exit 1 
	cd lzip-"$LZIPVER" || exit 1 

    ./configure --prefix=/tools || exit 1

    make || exit 1
    make install || exit 1
    cd ..
    rm -rf lzip-"$LZIPVER"
	echo lzip-"$LZIPVER" >> "$SFS"/tools/etc/tools_version
}

tools_lzip
