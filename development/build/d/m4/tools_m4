tools_m4 () {
#*****************************
	export M4VER=${VERSION:-$(echo m4-*.tar.?z | cut -d - -f 2 | rev | cut -f 3- -d . | rev)}

    tar xvf m4-"$M4VER".tar.xz || exit 1
	cd m4-"$M4VER" || exit 1 

    ./configure --prefix=/tools || exit 1

    make || exit 1
    make install || exit 1
    cd ..
    rm -rf m4-"$M4VER"
	echo m4-"$M4VER" >> "$SFS"/tools/etc/tools_version
}

tools_m4
