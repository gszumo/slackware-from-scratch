#!/bin/bash
#*****************************
sed_build () {
#*****************************
	export SEDVER=${VERSION:-$(echo sed-*.tar.?z | cut -d - -f 2 | rev | cut -f 3- -d . | rev)}

    tar xvf sed-"$SEDVER".tar.xz || exit 1
	cd sed-"$SEDVER" || exit 1 

    ./configure --prefix=/tools || exit 1

    make || exit 1
    make install || exit 1
    cd ..
    rm -rf sed-"$SEDVER"
	echo sed-"$SEDVER" >> "$SFS"/tools/etc/tools_version
}

sed_build 
