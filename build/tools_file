#!/bin/bash
#*****************************
tools_file () {
#*****************************
	export FILEVER=${VERSION:-$(echo file-*.tar.?z | cut -d - -f 2 | rev | cut -f 3- -d . | rev)}

    tar xvf file-"$FILEVER".tar.?z || exit 1
	cd file-"$FILEVER" || exit 1 

	./configure --prefix=/tools || exit 1

    make || exit 1
    make install || exit 1
    cd ..
    rm -rf file-"$FILEVER"
	echo file-"$FILEVER" >> "$SFS"/tools/etc/tools_version
}

tools_file
