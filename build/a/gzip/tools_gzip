#!/bin/bash
#*****************************
tools_gzip () {
#*****************************
	export GZIPVER=${VERSION:-$(echo gzip-*.tar.?z | cut -d - -f 2 | rev | cut -f 3- -d . | rev)}

    tar xvf gzip-"$GZIPVER".tar.xz || exit 1
	cd gzip-"$GZIPVER" || exit 1 

    ./configure --prefix=/tools || exit 1

    make || exit 1
    make install || exit 1
    cd ..
    rm -rf gzip-"$GZIPVER"
	echo gzip-"$GZIPVER" >> "$SFS"/tools/etc/tools_version
}

tools_gzip
