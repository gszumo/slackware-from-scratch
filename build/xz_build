#!/bin/bash
#*****************************
xz_build () {
#*****************************
	export XZVER=${VERSION:-$(echo xz-*.tar.?z | cut -d - -f 2 | rev | cut -f 3- -d . | rev)}

    tar xvf "xz-$XZVER".tar.?z || exit 1
	cd xz-"$XZVER" || exit 1 

    ./configure --prefix=/tools || exit 1

    make || exit 1
    make install || exit 1
    cd ..
    rm -rf xz-"$XZVER"
	echo xz-"$XZVER" >> "$SFS"/tools/etc/tools_version
}

xz_build
