#!/bin/bash
#*****************************
tar_build () {
#*****************************
	export TARVER=${VERSION:-$(echo tar-*.tar.xz | cut -d - -f 2 | rev | cut -f 3- -d . | rev)}

    tar xvf tar-"$TARVER".tar.xz || exit 1
	cd tar-"$TARVER" || exit 1 

    ./configure --prefix=/tools || exit 1

    make || exit 1
    make install || exit 1
    cd ..
    rm -rf tar-"$TARVER"
	echo tar-"$TARVER" >> "$SFS"/tools/etc/tools_version
}

tar_build 
