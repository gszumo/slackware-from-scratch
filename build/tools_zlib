#!/bin/bash
#*****************************
tools_zlib () {
#*****************************
	export ZLIBVER=${VERSION:-$(echo zlib-*.tar.?z | rev | cut -f 3- -d . | cut -f 1 -d - | rev)}

    tar xvf "zlib-$ZLIBVER".tar.?z || exit 1
	cd zlib-"$ZLIBVER" || exit 1 

    ./configure --prefix=/tools || exit 1

    make || exit 1
    make install || exit 1
    cd ..
    rm -rf zlib-"$ZLIBVER"
	echo zlib-"$ZLIBVER" >> "$SFS"/tools/etc/tools_version
}

tools_zlib
