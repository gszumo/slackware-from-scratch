#!/bin/bash

execute_sed_efivar () {
#******************************************************************
# remove '|| exit 1' on first build
#******************************************************************
if [ ! -f efivar.SlackBuild.old ]; then
	cp -v efivar.SlackBuild efivar.SlackBuild.old
	(
		cd $SLACKSRC/a/efivar
		sed -i -e 's/man\/\ || exit 1/man\/\ /' efivar.SlackBuild
	)
fi
}
execute_sed_efivar
